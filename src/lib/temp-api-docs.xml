        </api>
        <api method="POST" path="/staff-unavailability">
            <description>Tạo yêu cầu nghỉ phép</description>
            <request>StaffUnavailabilityRequestDto (startTime, endTime, reason)</request>
            <response>ResponseStaffUnavailabilityResponseDto</response>
        </api>
        <api method="PUT" path="/staff-unavailability/{id}/approve">
            <description>Duyệt yêu cầu nghỉ phép</description>
            <param>id: number</param>
            <response>ResponseStaffUnavailabilityResponseDto</response>
        </api>
        <api method="PUT" path="/staff-unavailability/{id}/reject">
            <description>Từ chối yêu cầu nghỉ phép</description>
            <param>id: number</param>
            <response>ResponseStaffUnavailabilityResponseDto</response>
        </api>
    </section>

