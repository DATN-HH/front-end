{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next/core-web-vitals", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "printWidth": 80,
        "tabWidth": 2
      }
    ],
    "react/react-in-jsx-scope": "off",
    "no-console": "warn",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "no-unused-vars": "warn",
    "react/prop-types": "off",

    // Turning off strict rules to focus on formatting
    "react/display-name": "off",
    "react/no-unescaped-entities": "off",
    "@next/next/no-img-element": "off",
    "import/no-anonymous-default-export": "off",
    "@next/next/no-html-link-for-pages": "off"
  }
}
